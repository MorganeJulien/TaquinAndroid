<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5EEF0">
    <Button android:id="@+id/menu_play"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/menu_play"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="normal"
        android:background="@drawable/button_menu"
        android:layout_marginTop="20dp" />
    <Button android:id="@+id/menu_options"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/menu_options"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="normal"
        android:background="@drawable/button_menu"
        android:layout_marginTop="20dp" />
    <Button android:id="@+id/menu_quit"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/menu_quit"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="normal"
        android:background="@drawable/button_menu"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView3" />
</LinearLayout>
